{
    "fullscreen-by-default": true,
    "enable-log-to-file": false,
    "number-of-video-channels": 3,

    "machine-names": {
        "server": "machine-name-1",
        "ecg":    "machine-name-2",
    },

    "server-volumes": {
        "master": 1,
        "video": 0.75,
        "ecg": 1,
        "static": 0.45
    },

    "ecg-beep": {
        "bpm": 38,
        "begin-at": 0.34,
        "end-at": 0.44
    },

    "media-files": {
        "live-path": "../path-to/live/",
        "preview-path": "../path-to/preview/",
        "test-sound": "test.mp3",
        "test-video": "test.mov",
        "live-dir": "/live/",
        "preview-dir": "/preview/",
        "allowed-video-extensions": "mov,mp4"
    }
}