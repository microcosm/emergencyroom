{
    "server-ip": "192.168.0.1",
    "of-port": 1001,
    "manage-port": 1002,

    "fullscreen-by-default": true,
    "enable-log-to-file": false,
    "test-content-mode": false,
    "number-of-video-channels": 3,
    "min-decoy-duration-secs": 7.5,

    "machine-names": {
        "server": "machine-name-1",
        "ecg":    "machine-name-2",
    },

    "server-volumes": {
        "master": 1,
        "breathing": 0.85,
        "video": 0.75,
        "ecg": 1,
        "static": 0.45
    },

    "ecg-beep": {
        "highest-bpm": 46,
        "lowest-bpm": 30,
        "bpm-period-secs": 180,
        "begin-at": 0.34,
        "end-at": 0.44
    },

    "media-sequencing": {
        "shortest-delay": 500,
        "longest-delay": 8000
    },

    "media-files": {
        "live-path": "../path-to/live/",
        "preview-path": "../path-to/preview/",
        "test-content-live-path": "../path-to/test/live/",
        "test-content-preview-path": "../path-to/test/preview/",
        "breathing-sound-path": "../path-to/breathing.wav",
        "live-dir": "/live/",
        "preview-dir": "/preview/",
        "video-file-extension": "mp4"
    }
}