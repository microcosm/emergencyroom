{
    "fullscreen-by-default": true,
    "enable-log-to-file": false,
    "number-of-video-channels": 3,

    "machine-names": {
        "server": "machine-name-1",
        "ecg":    "machine-name-2",
    },

    "server-volumes": {
        "master": 1,
        "breathing": 0.85,
        "video": 0.75,
        "ecg": 1,
        "static": 0.45
    },

    "ecg-beep": {
        "bpm": 38,
        "begin-at": 0.34,
        "end-at": 0.44
    },

    "media-files": {
        "live-path": "../path-to/live/",
        "preview-path": "../path-to/preview/",
        "test-sound-path": "../path-to/test.mp3",
        "test-video-path": "../path-to/test.mov",
        "breathing-sound-path": "../path-to/breathing.wav",
        "live-dir": "/live/",
        "preview-dir": "/preview/",
        "text-dir": "/texts/",
        "video-file-extension": "mp4",
        "text-file-extension": "txt"
    }
}